<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col-md-8">
      <h2><%= title %></h2>

      <% if (!contacts) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data not found.
        <a href="/contact" class="alert-link fw-normal">Back</a>.
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contacts.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contacts.email %>
          </h6>
          <p class="card-text"><%= contacts.phone %></p>
          <a href="/contact" class="btn btn-success card-link"
            ><i class="bi bi-arrow-left"></i
          ></a>
          <a
            href="/contact/edit/<%= contacts.name %>"
            class="btn btn-warning card-link text-white"
            ><i class="bi bi-pencil-square"></i
          ></a>
          <!-- <a
            href="/contact/destroy/<%= contacts.name %>"
            class="btn btn-danger card-link"
            onclick="return confirm('Are you sure?')"
            ><i class="bi bi-trash"></i
          ></a> -->
          <form method="POST" action="/contact?_method=DELETE" class="d-inline">
            <input type="hidden" name="name" value="<%= contacts.name %>" />
            <button
              type="submit"
              class="btn btn-danger"
              onclick="return confirm('Are you sure?')"
            >
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</div>
