<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col-md-8">
      <h2><%= title %></h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact/update">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="hidden"
            class="form-control"
            id="oldName"
            name="oldName"
            value="<%= (contact.oldName) ? contact.oldName : contact.name %>"
            required
          />
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone</label>
          <input
            type="number"
            class="form-control"
            id="phone"
            name="phone"
            value="<%= contact.phone %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary"><%= title %></button>
      </form>
    </div>
  </div>
</div>
