<div class="container mt-3 mb-3">
  <div class="row">
    <div class="col-md-8">
      <h2><%= title %></h2>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <a href="/contact/create" class="btn btn-success"
        ><i class="bi bi-plus"></i
      ></a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data not found.
              </div>
            </td>
          </tr>
          <% } %> <% let number = 1; %> <% contacts.forEach(contact => { %>
          <tr>
            <th scope="row"><%= number++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.email %></td>
            <td>
              <a href="/contact/<%= contact.name %>" class="btn btn-success"
                ><i class="bi bi-info-circle"></i
              ></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
